<Window x:Class="hagen.PropertiesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"  
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResizeWithGrip"
    Title="Properties" Height="600" Width="800">
    <DockPanel>
        <UniformGrid DockPanel.Dock="Bottom" HorizontalAlignment="Left" Rows="1" Columns="2">
            <Button Margin="4" Width="100" Name="okButton" IsDefault="True" Click="okButton_Click">OK</Button>
            <Button Margin="4" Name="cancelButton" IsCancel="True">Cancel</Button>
        </UniformGrid>
        <WindowsFormsHost Name="windowsFormsHost1">
            <wf:PropertyGrid x:Name="propertyGrid" />
        </WindowsFormsHost>
    </DockPanel>
</Window>
